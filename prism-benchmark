#!/bin/bash

# Catch Ctrl-C
trap control_c SIGINT
control_c()
{
  echo Exiting
  exit $?
}

# Process any switches
while [[ "$1" =~ ^-.+ ]]; do
	arg="$1"
	shift
	# logs directory
	if [ "$arg" = "-logs" ]; then
		if [ "$1" = "" ]; then
			echo "Error: No argument for -logs switch."
			exit
		fi
		PRISM_LOG_DIR=$1
		shift
		if [ "$PRISM_LOG_DIR" != "" -a ! -d "$PRISM_LOG_DIR" ]; then
		 echo Error: Log directory \"$PRISM_LOG_DIR\" does not exist.
		 exit
		fi
	fi
	# arguments file
	if [ "$arg" = "-args" ]; then
		if [ "$1" = "" ]; then
			echo "Error: No argument for -args switch."
			exit
		fi
		PRISM_ARGS_FILE=$1
		shift
		if [ -e "$PRISM_ARGS_FILE" ]; then
			unset PRISM_ARGS_ARRAY
			count=0
			while read -r line ; do
				if [ "$line" != "" ]; then
					if [[ ! ( "$line" =~ \#.+ ) ]]; then
						PRISM_ARGS_ARRAY[count]="$line"
						echo $count: $line
						let count=$count+1
					fi
				fi
			done < "$PRISM_ARGS_FILE"
		fi
	fi
	# executable
	if [ "$arg" = "-exec" ]; then
		if [ "$1" = "" ]; then
			echo "Error: No argument for -exec switch."
			exit
		fi
		PRISM=$1
		shift
	fi
	# specific single model
	if [ "$arg" = "-model" ]; then
		if [ "$1" = "" ]; then
			echo "Error: No argument for -model switch."
			exit
		fi
		PRISM_MODEL_SINGLE=$1
		shift
	fi
done

# Create dummy args array if none provided
if [ ${#PRISM_ARGS_ARRAY[*]} = 0 ]; then
	unset PRISM_ARGS_ARRAY
	PRISM_ARGS_ARRAY[0]=""
fi

# Default exectable is prism, if no other specified with -exec
if [ "$PRISM" = "" ]; then
	PRISM=prism
fi

# Check args
if [ "$1" = "" ]; then
	echo
	echo "Usage: prism-benchmark [options] <property|dir> [prism-args]"
	echo
	echo "Options:"
	echo " * -logs <dir> : specify location to put logs"
	echo " * -args <file> : specify file containing lists of arguments"
	echo " * -exec <file> : specify executable to run"
	echo
	exit
fi

# Get working directory and properties
# (NB: this curently breaks if there are spaces in file/dir names)
if [ -d "$1" ]; then
	PRISM_THIS_DIR="$1"
	# Read properties in from props file, if exists
	if [ -e "$PRISM_THIS_DIR"/props ]; then
		echo Reading properties from "$PRISM_THIS_DIR"/props
		PRISM_PROPERTIES_LIST_FILE="$PRISM_THIS_DIR"/props
	fi
	if [ -e "$PRISM_PROPERTIES_LIST_FILE" ]; then
		unset PRISM_PROPERTIES
		count=0
		while read -r line ; do
			if [ "$line" != "" ]; then
				if [[ ! ( "$line" =~ \#.+ ) ]]; then
					PRISM_PROPERTIES[count]="$line"
					#echo $count: $line
					let count=$count+1
				fi
			fi
		done < "$PRISM_PROPERTIES_LIST_FILE"
	else
		echo Searching for properties in "$1"
		PRISM_PROPERTIES=( $(cd "$PRISM_THIS_DIR"; /bin/ls -1 *.pctl *.csl 2> /dev/null) )
		#PRISM_PROPERTIES=( $(find "$1" -name '*.pctl' -o -name '*.csl') )
		#for PRISM_PROPERTY in "${PRISM_PROPERTIES[@]}"; do
		#	echo $PRISM_PROPERTY
		#done
	fi
else
	PRISM_THIS_DIR=`dirname "$1"`
	PRISM_PROPERTIES=(`basename "$1"`)
	if [ ! -e "$1" ]; then
	 echo Error: Property \"$1\" does not exist
	 exit
	fi
fi
if [ ${#PRISM_PROPERTIES[*]} = 0 ]; then
	echo "Error: No properties found."
	exit
fi
shift

# Create dummy properties array if none provided
if [ ${#PRISM_PROPERTIES[*]} = 0 ]; then
	unset PRISM_PROPERTIES
	PRISM_PROPERTIES[0]=""
fi

# Loop through properties...
for PRISM_PROPERTY in "${PRISM_PROPERTIES[@]}"; do
echo Property: "$PRISM_PROPERTY"
PRISM_PROPERTY_FILE="$PRISM_THIS_DIR"/"$PRISM_PROPERTY"

# Read models dir in from file (or use cwd)
if [ -e "$PRISM_THIS_DIR"/models_dir ]; then
	PRISM_MODEL_DIR="$PRISM_THIS_DIR"/`cat "$PRISM_THIS_DIR"/models_dir`
else
	PRISM_MODEL_DIR="$PRISM_THIS_DIR"
fi
if [ ! -d "$PRISM_MODEL_DIR" ]; then
	echo Error: Models directory \"$PRISM_MODEL_DIR\" does not exist
	exit
fi

# Get list of models
# OPTION 1: Use a single model, specified with the -model switch
if [ "$PRISM_MODEL_SINGLE" != "" ]; then
	PRISM_MODELS=( "$PRISM_MODEL_SINGLE" )
else
	# OPTION 2: Read models in from file
	# (if no local file, look in models dir)
	# (if neither, do ls)
	if [ -e "$PRISM_THIS_DIR"/models ]; then
		PRISM_MODELS_LIST_FILE="$PRISM_THIS_DIR"/models
	else
		PRISM_MODELS_LIST_FILE="$PRISM_MODEL_DIR"/models
	fi
	if [ -e "$PRISM_MODELS_LIST_FILE" ]; then
		unset PRISM_MODELS
		count=0
		while read -r line ; do
			if [ "$line" != "" ]; then
				if [[ ! ( "$line" =~ \#.+ ) ]]; then
					PRISM_MODELS[count]="$line"
					#echo $count: $line
					let count=$count+1
				fi
			fi
		done < "$PRISM_MODELS_LIST_FILE"
	else
		# OPTION 3: Use all models in dir
		PRISM_MODELS=( $(cd "$PRISM_MODEL_DIR"; /bin/ls -1 *.?m) )
		#echo ${PRISM_MODELS[@]}
	fi
	if [ ${#PRISM_MODELS[*]} = 0 ]; then
		echo "Error: No models found."
		exit
	fi
fi

# Read any extra args in from file
if [ -e "$PRISM_THIS_DIR"/args ]; then
	echo Reading args from "$PRISM_THIS_DIR"/args
	BASE_PRISM_ARGS=`cat "$PRISM_THIS_DIR"/args`
else
	BASE_PRISM_ARGS=""
fi

# Loop through models
#echo "$PRISM_THIS_DIR"/
for PRISM_MODEL in "${PRISM_MODELS[@]}"; do
echo Model: "$PRISM_MODEL"

	PRISM_MODEL_FILE="$PRISM_MODEL_DIR"/"$PRISM_MODEL"
	#PRISM_MODEL_DIR_NAME="`readlink -e $PRISM_MODEL_DIR | xargs basename`"
	PRISM_MODEL_DIR_NAME="`echo $PRISM_MODEL_DIR | xargs basename`"
	#if [ "$PRISM_PROPERTY" != "" ]; then
	#	PRISM_PROPERTY_NAME=`basename $PRISM_PROPERTY`
	#else
	#	PRISM_PROPERTY_NAME=""
	#fi

	# Loop through arguments array...
	for PRISM_ARGS in "${PRISM_ARGS_ARRAY[@]}"; do

		echo $PRISM_MODEL $PRISM_PROPERTY $BASE_PRISM_ARGS $PRISM_ARGS "$@"
		if [ "$PRISM_LOG_DIR" != "" ]; then
			# Build name for log file
			PRISM_LOG_FILE_MODEL="`echo "$PRISM_MODEL" | sed -E 's/-const //g' | sed -E 's/[^a-zA-Z0-9_=, \.]//g' | sed -E "s/ +/./g" | sed -E 's/\.\.\///g' | sed -E 's/\//_/g'`"
			PRISM_LOG_FILE_PROPERTY="`echo "$PRISM_PROPERTY" | sed -E 's/[^a-zA-Z0-9_=, \.]//g' | sed -E 's/-const//g' | sed -E 's/ +/\./g' | sed -E 's/\.\.\///g' | sed -E 's/\//_/g'`"
			PRISM_LOG_FILE_ARGS="`echo $PRISM_ARGS $@ | sed -E 's/[^a-zA-Z0-9_=, ]//g' | sed -E 's/ +/\./g'`"
			if [ "$PRISM_LOG_FILE_ARGS" != "" ]; then
				PRISM_LOG_FILE_EXT=".$PRISM_LOG_FILE_ARGS"
			else
				PRISM_LOG_FILE_EXT=""
			fi
			PRISM_LOG_FILE="$PRISM_LOG_DIR"/"$PRISM_MODEL_DIR_NAME"."$PRISM_LOG_FILE_MODEL"."$PRISM_LOG_FILE_PROPERTY""$PRISM_LOG_FILE_EXT.log"
			$PRISM $PRISM_MODEL_FILE $PRISM_PROPERTY_FILE $BASE_PRISM_ARGS $PRISM_ARGS "$@" &> $PRISM_LOG_FILE
		else
			$PRISM $PRISM_MODEL_FILE $PRISM_PROPERTY_FILE $BASE_PRISM_ARGS $PRISM_ARGS "$@"
		fi
		
	done # args list loop

done # model loop

done # property loop


